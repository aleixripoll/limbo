---
import Base from "@layouts/Base.astro";
import SearchBar from "@layouts/Search";
import { getSinglePage } from "@lib/contentParser.astro";

// Retrieve all articles
const posts = await getSinglePage("posts");

// Build a slim search index for the client â€” avoid sending full post bodies
const searchList = posts.map((item: any) => ({
  slug: item.slug,
  data: {
    title: item.data.title,
    description: item.data.description,
    categories: item.data.categories,
    tags: item.data.tags,
    image: item.data.image,
  },
  // include a short excerpt only to display in results
  excerpt: item.data.description || item.body?.slice(0, 200) || "",
}));
---

<Base title={`Cerca`}>
  <section class="section">
    <div class="container">
      <SearchBar client:load searchList={searchList} />
    </div>
  </section>
</Base>
