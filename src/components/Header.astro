---
import Logo from "@components/Logo.astro";
import menu from "@config/menu.json";
import { IoSearch } from "react-icons/io5/index.js";
import { BiHome, BiUser, BiCategoryAlt, BiPurchaseTag } from "react-icons/bi/index.js";
import ThemeToggle from './ThemeToggle.astro';
//import ThemeSwitcher from './ThemeSwitcher.astro';

export interface ChildNavigationLink {
  name: string;
  url: string;
}

export interface NavigationLink {
  name: string;
  url: string;
  hasChildren?: boolean;
  children?: ChildNavigationLink[];
}

const { main }: { main: NavigationLink[] } = menu;

// Map menu names to icons
const menuIcons: Record<string, any> = {
  "Inici": BiHome,
  "Autors": BiUser,
  "Categories": BiCategoryAlt,
  "Tags": BiPurchaseTag,
};
---

<header class="header /*sticky*/ pt-1 bg-gray-100 dark:bg-gray-900/50">
  <nav class="navbar container">
    <!-- logo -->
    <div class="order-0">
      <Logo />
    </div>
    <!-- navbar toggler -->
    <input id="nav-toggle" type="checkbox" class="hidden" />
    <label
      id="burger-button"
      for="nav-toggle"
      class="order-2 flex cursor-pointer items-center md:order-1 md:hidden"
      aria-label="Toggle menu"
    >
      <div class="burger-icon">
        <span class="burger-bar bar-1"></span>
        <span class="burger-bar bar-2"></span>
        <span class="burger-bar bar-3"></span>
      </div>
    </label>
    <!-- /navbar toggler -->

    <ul
      id="nav-menu"
      class="navbar-nav order-3 w-full md:order-1 md:flex md:w-auto lowercase"
    >
      {
        main.map((menu) => (
          <>
            {menu.hasChildren ? (
              <li class="nav-item nav-dropdown group relative cursor-pointer">
                <span class="nav-link inline-flex items-center">
                  {menu.name}
                  <svg class="h-5 w-5 fill-current" viewBox="0 0 20 20">
                    <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                  </svg>
                </span>
                <ul class="nav-dropdown-list hidden group-hover:block md:invisible md:absolute md:block md:opacity-0 md:group-hover:visible md:group-hover:opacity-100">
                  {menu.children?.map((child) => (
                    <li class="nav-dropdown-item">
                      <a href={`${import.meta.env.BASE_URL}${child.url}`} class="nav-dropdown-link">
                        {child.name}
                      </a>
                    </li>
                  ))}
                </ul>
              </li>
            ) : (
              <li class="nav-item">
                <a href={`${import.meta.env.BASE_URL}${menu.url}`} class="nav-link">
                  {(() => {
                    const Icon = menuIcons[menu.name];
                    return Icon ? <Icon className="h-5 w-5 text-primary" /> : null;
                  })()}
                  {menu.name}
                </a>
              </li>
            )}
          </>
        ))
      }
    </ul>
    <div class="order-1 ml-auto gap-4 flex md:order-2 md:ml-0">
      <ThemeToggle />
      {/*}<ThemeSwitcher />*/}
      <a
        class="mr-4 inline-block cursor-pointer p-2 text-xl text-dark dark:text-light transition hover:text-primary md:mr-0"
        href={`${import.meta.env.BASE_URL}search`}
        title="search"
        aria-label="search"
      >
        <IoSearch />
      </a>
    </div>
  </nav>
</header>
